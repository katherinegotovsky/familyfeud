<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relatively"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=	"#FFD700"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Welcome to"
        android:textColor="#000"
        android:textSize="50sp"
        android:textStyle="bold"
        ads:layout_constraintHorizontal_bias="0.0"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="42dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="307dp"
        android:layout_marginTop="75dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:src="@mipmap/familyfeudlogo"
        android:visibility="visible"
        ads:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        ads:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        ads:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Created by Katherine Gotovsky"
        android:textSize="30sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        ads:layout_constraintLeft_toLeftOf="@+id/imageView3"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        ads:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        ads:layout_constraintTop_toTopOf="@+id/textView2"
        ads:layout_constraintVertical_bias="0.869" />

</android.support.constraint.ConstraintLayout>
